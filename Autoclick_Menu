local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0.9, 0, 0, 35)
toggleButton.Position = UDim2.new(0.05, 0, 0, 185)
toggleButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Text = "Ð’ÐšÐ›Ð®Ð§Ð˜Ð¢Ð¬ (F)"
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 14
toggleButton.Parent = contentFrame

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 6)
buttonCorner.Parent = toggleButton

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ñ Ð¿Ð¾Ð·Ð¸Ñ†Ð¸Ð¸ Ð½ÐµÐ²Ð¸Ð´Ð¸Ð¼Ð¾Ð¹ Ñ‚Ð¾Ñ‡ÐºÐ¸
local function updateClickDotPosition()
    local visualPos = visualDot.AbsolutePosition
    local visualSize = visualDot.AbsoluteSize
    local centerX = visualPos.X + (visualSize.X / 2)
    local centerY = visualPos.Y + (visualSize.Y / 2) + 50 -- Ð¡Ð¼ÐµÑ‰ÐµÐ½Ð¸Ðµ Ð½Ð° 50 Ð¿Ð¸ÐºÑÐµÐ»ÐµÐ¹ Ð²Ð½Ð¸Ð·
    
    clickDot.Position = UDim2.new(0, centerX, 0, centerY)
end

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð¿Ð¾Ð»ÑƒÑ‡ÐµÐ½Ð¸Ñ Ð¿Ð¾Ð·Ð¸Ñ†Ð¸Ð¸ ÐºÐ»Ð¸ÐºÐ°
local function getClickPosition()
    return Vector2.new(clickDot.AbsolutePosition.X, clickDot.AbsolutePosition.Y)
end

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð²Ñ‹Ð¿Ð¾Ð»Ð½ÐµÐ½Ð¸Ñ ÐºÐ»Ð¸ÐºÐ° Ð¿Ð¾ Ð¿Ð¾Ð·Ð¸Ñ†Ð¸Ð¸ Ñ‚Ð¾Ñ‡ÐºÐ¸
local function performClick()
    local clickPos = getClickPosition()
    local x, y = clickPos.X, clickPos.Y
    
    VirtualInputManager:SendMouseButtonEvent(x, y, 0, true, game, 1)
    task.wait(clickDelay)
    VirtualInputManager:SendMouseButtonEvent(x, y, 0, false, game, 1)
end

-- Ð¦Ð¸ÐºÐ» Ð°Ð²Ñ‚Ð¾ÐºÐ»Ð¸ÐºÐµÑ€Ð°
local function autoClickLoop()
    while autoClickEnabled and menuVisible do
        performClick()
        task.wait(clickInterval)
    end
end

-- ÐžÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ Ð¸Ð½Ñ‚ÐµÑ€Ñ„ÐµÐ¹ÑÐ°
local function updateUI()
    if autoClickEnabled then
        statusLabel.Text = "ÐÐ²Ñ‚Ð¾ÐºÐ»Ð¸ÐºÐµÑ€: Ð’ÐšÐ›"
        statusLabel.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        toggleButton.Text = "Ð’Ð«ÐšÐ›Ð®Ð§Ð˜Ð¢Ð¬ (F)"
        toggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        visualDot.Visible = false
    else
        statusLabel.Text = "ÐÐ²Ñ‚Ð¾ÐºÐ»Ð¸ÐºÐµÑ€: Ð’Ð«ÐšÐ›"
        statusLabel.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        toggleButton.Text = "Ð’ÐšÐ›Ð®Ð§Ð˜Ð¢Ð¬ (F)"
        toggleButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        visualDot.Visible = true
    end
end

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ ÑÐ²Ð¾Ñ€Ð°Ñ‡Ð¸Ð²Ð°Ð½Ð¸Ñ/Ñ€Ð°Ð·Ð²Ð¾Ñ€Ð°Ñ‡Ð¸Ð²Ð°Ð½Ð¸Ñ Ð¼ÐµÐ½ÑŽ
local function toggleMenu()
    menuExpanded = not menuExpanded
    
    if menuExpanded then
        -- Ð Ð°Ð·Ð²Ð¾Ñ€Ð°Ñ‡Ð¸Ð²Ð°ÐµÐ¼ Ð¼ÐµÐ½ÑŽ
        frame.Size = UDim2.new(0, 280, 0, 240)
        contentFrame.Visible = true
        minimizeButton.Text = "â€•"
        minimizeButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    else
        -- Ð¡Ð²Ð¾Ñ€Ð°Ñ‡Ð¸Ð²Ð°ÐµÐ¼ Ð¼ÐµÐ½ÑŽ
        frame.Size = UDim2.new(0, 280, 0, 25)
        contentFrame.Visible = false
        minimizeButton.Text = "+"
        minimizeButton.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
    end
end

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð·Ð°ÐºÑ€Ñ‹Ñ‚Ð¸Ñ Ð¼ÐµÐ½ÑŽ
local function closeMenu()
    menuVisible = false
    frame.Visible = false
    visualDot.Visible = false
    -- ÐžÑÑ‚Ð°Ð½Ð°Ð²Ð»Ð¸Ð²Ð°ÐµÐ¼ Ð°Ð²Ñ‚Ð¾ÐºÐ»Ð¸ÐºÐµÑ€ Ð¿Ñ€Ð¸ Ð·Ð°ÐºÑ€Ñ‹Ñ‚Ð¸Ð¸
    if autoClickEnabled then
        autoClickEnabled = false
        print("ðŸ›‘ ÐÐ²Ñ‚Ð¾ÐºÐ»Ð¸ÐºÐµÑ€ Ð¾ÑÑ‚Ð°Ð½Ð¾Ð²Ð»ÐµÐ½ (Ð¼ÐµÐ½ÑŽ Ð·Ð°ÐºÑ€Ñ‹Ñ‚Ð¾)")
    end
end

-- ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸ÐºÐ¸ ÐºÐ½Ð¾Ð¿Ð¾Ðº
closeButton.MouseButton1Click:Connect(closeMenu)
minimizeButton.MouseButton1Click:Connect(toggleMenu)

-- ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ñ Ð¸Ð½Ñ‚ÐµÑ€Ð²Ð°Ð»Ð°
intervalBox.FocusLost:Connect(function(enterPressed)
    local newInterval = tonumber(intervalBox.Text)
    if newInterval and newInterval > 0 and newInterval <= 10 then
        clickInterval = newInterval
        intervalBox.Text = tostring(clickInterval)
        print("âœ… Ð˜Ð½Ñ‚ÐµÑ€Ð²Ð°Ð» ÑƒÑÑ‚Ð°Ð½Ð¾Ð²Ð»ÐµÐ½: " .. clickInterval .. "Ñ")
    else
        intervalBox.Text = tostring(clickInterval)
        print("âŒ ÐÐµÐ²ÐµÑ€Ð½Ñ‹Ð¹ Ð¸Ð½Ñ‚ÐµÑ€Ð²Ð°Ð»! Ð˜ÑÐ¿Ð¾Ð»ÑŒÐ·ÑƒÐ¹Ñ‚Ðµ Ñ‡Ð¸ÑÐ»Ð¾ Ð¾Ñ‚ 0.01 Ð´Ð¾ 10")
    end
end)

-- ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ñ Ð·Ð°Ð´ÐµÑ€Ð¶ÐºÐ¸ ÐºÐ»Ð¸ÐºÐ°
delayBox.FocusLost:Connect(function(enterPressed)
    local newDelay = tonumber(delayBox.Text)
    if newDelay and newDelay >= 0 and newDelay <= 2 then
        clickDelay = newDelay
        delayBox.Text = tostring(clickDelay)
        print("âœ… Ð—Ð°Ð´ÐµÑ€Ð¶ÐºÐ° ÐºÐ»Ð¸ÐºÐ° ÑƒÑÑ‚Ð°Ð½Ð¾Ð²Ð»ÐµÐ½Ð°: " .. clickDelay .. "Ñ")
    else
        delayBox.Text = tostring(clickDelay)
        print("âŒ ÐÐµÐ²ÐµÑ€Ð½Ð°Ñ Ð·Ð°Ð´ÐµÑ€Ð¶ÐºÐ°! Ð˜ÑÐ¿Ð¾Ð»ÑŒÐ·ÑƒÐ¹Ñ‚Ðµ Ñ‡Ð¸ÑÐ»Ð¾ Ð¾Ñ‚ 0 Ð´Ð¾ 2")
    end
end)

-- ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº ÐºÐ½Ð¾Ð¿ÐºÐ¸ Ð¿ÐµÑ€ÐµÐºÐ»ÑŽÑ‡ÐµÐ½Ð¸Ñ
toggleButton.MouseButton1Click:Connect(function()
    if not menuVisible then return end -- ÐÐµ Ñ€ÐµÐ°Ð³Ð¸Ñ€Ð¾Ð²Ð°Ñ‚ÑŒ ÐµÑÐ»Ð¸ Ð¼ÐµÐ½ÑŽ Ð·Ð°ÐºÑ€Ñ‹Ñ‚Ð¾
    
    autoClickEnabled = not autoClickEnabled
    
    if autoClickEnabled then
        task.spawn(autoClickLoop)
    end
    
    updateUI()
end)

-- ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº ÐºÐ»Ð°Ð²Ð¸Ð°Ñ‚ÑƒÑ€Ñ‹
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if not menuVisible then return end -- ÐÐµ Ñ€ÐµÐ°Ð³Ð¸Ñ€Ð¾Ð²Ð°Ñ‚ÑŒ Ð½Ð° F ÐµÑÐ»Ð¸ Ð¼ÐµÐ½ÑŽ Ð·Ð°ÐºÑ€Ñ‹Ñ‚Ð¾
    
    if input.KeyCode == Enum.KeyCode.F then
        autoClickEnabled = not autoClickEnabled
        
        if autoClickEnabled then
            task.spawn(autoClickLoop)
        end
        
        updateUI()
    end
end)

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ð¾Ð½Ð°Ð» Ð¿ÐµÑ€ÐµÑ‚Ð°ÑÐºÐ¸Ð²Ð°Ð½Ð¸Ñ Ð´Ð»Ñ visualDot
local dotDragging = false
local dotDragOffset = Vector2.new(0, 0)

visualDot.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dotDragging = true
        local mousePos = Vector2.new(input.Position.X, input.Position.Y)
        dotDragOffset = Vector2.new(visualDot.AbsolutePosition.X, visualDot.AbsolutePosition.Y) - mousePos
    end
end)

visualDot.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dotDragging = false
    end
end)

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ð¾Ð½Ð°Ð» Ð¿ÐµÑ€ÐµÑ‚Ð°ÑÐºÐ¸Ð²Ð°Ð½Ð¸Ñ Ð¼ÐµÐ½ÑŽ
local frameDragging = false
local frameDragOffset = Vector2.new(0, 0)

header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        frameDragging = true
        frameDragOffset = frame.AbsolutePosition - Vector2.new(input.Position.X, input.Position.Y)
    end
end)

header.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        frameDragging = false
    end
end)

UserInputService.InputChanged:Connect(function(input)
    -- ÐŸÐµÑ€ÐµÑ‚Ð°ÑÐºÐ¸Ð²Ð°Ð½Ð¸Ðµ Ð²Ð¸Ð·ÑƒÐ°Ð»ÑŒÐ½Ð¾Ð¹ Ñ‚Ð¾Ñ‡ÐºÐ¸
    if dotDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local mousePos = Vector2.new(input.Position.X, input.Position.Y)
        local newPosition = mousePos + dotDragOffset
        
        local viewportSize = workspace.CurrentCamera.ViewportSize
        newPosition = Vector2.new(
            math.clamp(newPosition.X, 0, viewportSize.X - visualDot.AbsoluteSize.X),
            math.clamp(newPosition.Y, 0, viewportSize.Y - visualDot.AbsoluteSize.Y)
        )
        
        visualDot.Position = UDim2.new(0, newPosition.X, 0, newPosition.Y)
        updateClickDotPosition() -- ÐžÐ±Ð½Ð¾Ð²Ð»ÑÐµÐ¼ Ð¿Ð¾Ð·Ð¸Ñ†Ð¸ÑŽ Ð½ÐµÐ²Ð¸Ð´Ð¸Ð¼Ð¾Ð¹ Ñ‚Ð¾Ñ‡ÐºÐ¸
    end
    
    -- ÐŸÐµÑ€ÐµÑ‚Ð°ÑÐºÐ¸Ð²Ð°Ð½Ð¸Ðµ Ð¼ÐµÐ½ÑŽ
    if frameDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local mousePos = Vector2.new(input.Position.X, input.Position.Y)
        local newPosition = mousePos + frameDragOffset
        
        local viewportSize = workspace.CurrentCamera.ViewportSize
        newPosition = Vector2.new(
            math.clamp(newPosition.X, 0, viewportSize.X - frame.AbsoluteSize.X),
            math.clamp(newPosition.Y, 0, viewportSize.Y - frame.AbsoluteSize.Y)
        )
        
        frame.Position = UDim2.new(0, newPosition.X, 0, newPosition.Y)
    end
end)

-- ÐžÐ±Ð½Ð¾Ð²Ð»ÑÐµÐ¼ Ð¿Ð¾Ð·Ð¸Ñ†Ð¸ÑŽ Ñ‚Ð¾Ñ‡ÐºÐ¸ Ð¿Ñ€Ð¸ Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ð¸ Ñ€Ð°Ð·Ð¼ÐµÑ€Ð° ÑÐºÑ€Ð°Ð½Ð°
workspace.CurrentCamera:GetPropertyChangedSignal("ViewportSize"):Connect(function()
    if not dotDragging then
        local viewportSize = workspace.CurrentCamera.ViewportSize
        visualDot.Position = UDim2.new(0.5, -10, 0.5, -10)
        updateClickDotPosition()
    end
end)

-- Ð˜Ð½Ð¸Ñ†Ð¸Ð°Ð»Ð¸Ð·Ð°Ñ†Ð¸Ñ
updateUI()
updateClickDotPosition()

print("ðŸŽ® Ð£Ð»ÑƒÑ‡ÑˆÐµÐ½Ð½Ñ‹Ð¹ Ð°Ð²Ñ‚Ð¾ÐºÐ»Ð¸ÐºÐµÑ€ Ð·Ð°Ð³Ñ€ÑƒÐ¶ÐµÐ½!")
print("F - Ð’ÐºÐ»/Ð’Ñ‹ÐºÐ» Ð°Ð²Ñ‚Ð¾ÐºÐ»Ð¸Ðº")
print("Ã— - Ð—Ð°ÐºÑ€Ñ‹Ñ‚ÑŒ Ð¼ÐµÐ½ÑŽ")
print("â€• - Ð¡Ð²ÐµÑ€Ð½ÑƒÑ‚ÑŒ/Ñ€Ð°Ð·Ð²ÐµÑ€Ð½ÑƒÑ‚ÑŒ Ð¼ÐµÐ½ÑŽ")
print("ÐŸÐµÑ€ÐµÑ‚Ð°Ñ‰Ð¸Ñ‚Ðµ Ð·Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ð¼ÐµÐ½ÑŽ Ð´Ð»Ñ Ð¿ÐµÑ€ÐµÐ¼ÐµÑ‰ÐµÐ½Ð¸Ñ")
print("ÐŸÐµÑ€ÐµÑ‚Ð°Ñ‰Ð¸Ñ‚Ðµ ÐºÑ€Ð°ÑÐ½ÑƒÑŽ Ñ‚Ð¾Ñ‡ÐºÑƒ Ð´Ð»Ñ Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ñ Ð¿Ð¾Ð·Ð¸Ñ†Ð¸Ð¸ ÐºÐ»Ð¸ÐºÐ°")
